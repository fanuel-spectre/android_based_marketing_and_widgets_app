<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lada">

    <application
        android:allowBackup="true"
        android:icon="@drawable/lada"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/lada"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zenbil30">
        <activity
            android:name="com.example.lada.HomeDriversActivity"
            android:exported="false"
            android:label="@string/title_activity_home_drivers"
            android:theme="@style/Theme.Zenbil30.NoActionBar" />
        <activity
            android:name="com.example.lada.MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps" />
        <activity
            android:name="com.example.lada.lada.LadaSplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.lada.activities.ShopDetailsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.DisplayProductActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.chat.ChatActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.EditProductActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.AddProductActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.SampleActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.TryActivity"
            android:exported="false" />
        <activity
            android:name="com.zfdang.multiple_images_selector.ImagesSelectorActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.example.lada.activities.DoodleActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.SellerEditProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.UserEditProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.MainUserActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.MainSellerActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.RegisterUserActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.RegisterUserActivityII"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.RegisterSellerActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.lada.activities.SplashActivity"
            android:exported="false" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <service android:name="com.example.lada.Services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

</manifest>