<!--        </RelativeLayout>-->

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/shop_name"
           android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="6dp"
            android:text="99 Br."
            android:layout_toStartOf="@id/discount_price"
            android:textColor="#FA6B1B"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/discount_price"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/shop_name"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="3dp"
            android:text="99 Br."
            android:textColor="@color/light_green"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/shop_name"
            app:layout_constraintEnd_toStartOf="@+id/shop_name"
            app:layout_constraintTop_toTopOf="@+id/shop_name" />

        <ImageView
            android:id="@+id/cart_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/shop_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/grey_circular_border"
            android:padding="8dp"
            android:src="@drawable/trolley" />

        <ImageView
            android:id="@+id/like_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/grey_circular_border"
            android:padding="8dp"
            android:src="@drawable/heart" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>